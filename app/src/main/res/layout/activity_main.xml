<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/texture"
    tools:context="com.bhadresha.tejas.sannibh.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:clipToPadding="true"
            android:layout_weight="1"
            >

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="170dp"
                android:gravity="center"
                android:onClick="home_activity"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/circlebackground"
                    android:padding="10dp"
                    android:src="@drawable/abc_people_black_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="About Us"
                    android:textSize="18dp"
                    android:textStyle="bold" />


            </LinearLayout>


                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="170dp"
                    android:gravity="center"
                    android:onClick="services"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="10dp"
                        android:background="@drawable/circlebackground"
                        android:src="@drawable/abc_service_black_24dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Services"
                        android:textStyle="bold"
                        android:textSize="18dp"/>


                </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:clipToPadding="true"
            android:layout_weight="1">


            <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="170dp"
                    android:gravity="center"
                    android:onClick="cppd"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="10dp"
                        android:background="@drawable/circlebackground"
                        android:src="@drawable/cppd"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="CPPD"
                        android:textStyle="bold"
                        android:textSize="18dp"/>


                </LinearLayout>

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="170dp"
                android:gravity="center"
                android:onClick="gallery"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/circlebackground"
                    android:padding="10dp"
                    android:src="@drawable/abc_photo_library_black_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Gallery"
                    android:textSize="18dp"
                    android:textStyle="bold" />


            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:clipToPadding="true"
            android:layout_weight="1">




                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="170dp"
                    android:gravity="center"
                    android:onClick="contact"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"

                        android:padding="10dp"
                        android:background="@drawable/circlebackground"
                        android:src="@drawable/abc_call_black_24dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Contact Us"
                        android:textStyle="bold"
                        android:textSize="18dp"/>


                </LinearLayout>

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="170dp"
                android:gravity="center"
                android:id="@+id/exit_btn"
                android:onClick="exit_app"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"

                    android:padding="10dp"
                    android:background="@drawable/circlebackground"
                    android:src="@drawable/abc_exit_to_app_black_24dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Exit"
                    android:textStyle="bold"
                    android:textSize="18dp"/>


            </LinearLayout>




        </LinearLayout>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        app:showAsAction="always"
        android:id="@+id/nav123"
        app:menu="@menu/navigation_menu">

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
